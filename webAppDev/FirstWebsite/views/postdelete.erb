<% if @post %>
	<p>Are you sure you want to delete the following note: <em>"<%= @post.content %>"</em>?</p>
	<form action="/forum/<%= @post.id %>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Yes, Delete It!">
		<a href="/forum/<%= @post.id %>">Cancel</a>
	</form>
<% else %>
	<p>Note not found.</p>
<% end %>